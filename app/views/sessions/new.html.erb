<h1>Log in</h1>
  
<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash#{name}" %>
<% end %>

<%= form_tag sessions_path do %>

<p>
	<%= label_tag :email %>
	<%= text_field_tag :email %>
</p>

<p>
	<%= label_tag :password %>
	<%= password_field_tag :password %>
</p>
 <p class="button"><%= submit_tag "Submit" %></p>
<% end %>
